              </li> -->
              <% if current_user%>
              <!-- <li class="nav-item mr-3">
                <%= link_to "Enviarselo a un amigo",   user_session_path, :class=>"nav-link" %>
              </li> -->
              <li class="nav-item mr-3">
                <%= link_to "Cerrar sesión",   destroy_user_session_path , :method=>"delete", :class=>"nav-link" %>
              </li>
              <%else%>
              <li class="nav-item mr-3">
                <%= link_to "Ingresar",   user_session_path, :class=>"nav-link" %>
              </li>
              <li class="nav-item mr-3">
                <%= link_to "Registrarme",  new_user_registration_path, :class=>"nav-link" %>
              </li>
              <%end%>
          </ul>
      </div>
  </nav>
</header>
<%= yield %>

