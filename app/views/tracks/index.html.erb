<div style="margin-top: 10%"></div>
<div class="container">
<p id="notice"><%= notice %></p>
<table class="table">
  <thead>
    <tr>
      <th>Nombre </th>
      <th>Descripción </th>
      <th>Tags </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.name %></td>
        <td><%= track.description %></td>
         <td><button type="button" class="btn btn-primary"><span class="badge"><%=track.tags%></span></button></td>
        <td><%= link_to 'Ver', track %></td>
        <td><%= link_to 'Editar', edit_track_path(track) %></td>
        <td><%= link_to 'Borrar', track, method: :delete, data: { confirm: '¿Seguro? se borraran todos los datos' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

    