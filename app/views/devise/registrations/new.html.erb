
<div class="cont_principal">

  <div class="cont_centrar">
  <div class="cont_login">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="cont_tabs_login">
      <ul class='ul_tabs'>
        <li><%= link_to "INGRESAR",   user_session_path %>
        <span class="linea_bajo_nom"></span>
        </li>
        <li class="active"><a href="" onclick="sign_up()">REGISTRARME</a><span class="linea_bajo_nom"></span>
        </li>
      </ul>
      </div>
  <div class="cont_text_inputs">

      <%= f.email_field :email, autofocus: true, class: "input_form_sign d_block active_inp", placeholder: "EMAIL" %>


      <% if @minimum_password_length %>
      <em style="margin-left: 5%; font-size:12px"> (Tu contraseña tiene que tener <%= @minimum_password_length %> caracteres minimo)</em>
      <% end %><br />
     <%= f.password_field :password, class: "input_form_sign d_block  active_inp", placeholder: "CONTRASEÑA" %>

     <%= f.password_field :password_confirmation, autocomplete: "off", class:"input_form_sign d_block active_inp", placeholder:"CONFIRMA TU CONTRASEÑA" %>

<div class="terms_and_cons d_none">
    <p><input type="checkbox" name="terms_and_cons" /> <label for="terms_and_cons">Acepto los terminos y condiciones.</label></p>

    </div>
      </div>
<div class="cont_btn">
     <button class="btn_sign">Crear cuenta</button>

      </div>

      <%end%>
    </div>

  </div>


</div>
